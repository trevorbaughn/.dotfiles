 {
  "reload_style_on_change": true,
  "margin-top": 5,
  "layer": "bottom",
  "position": "top",
  "height": 28,
  "spacing": 5,
  "modules-left":  ["hyprland/workspaces",
                    "network",
                    "temperature", 
                    "cpu",
                    "memory"],
  "modules-center":["hyprland/window"],
  "modules-right": ["gamemode",
                    "idle_inhibitor",
                    "hyprland/language",
                    "pulseaudio",
                    "tray",
                    "custom/weather",
                    "clock",
                    "custom/power"],
  
  "network": {
    "interval": 5,
    "format-wifi": "    {essid} ({signalStrength}%) ",
    "format-ethernet": "   {ifname}: {ipaddr}/{cidr} ",
    "format-disconnected": "  ⚠  Disconnected  ",
    "tooltip": false,
  },

  "temperature": {
    "critical-threshold": 79,
    "interval": 4,
    "format": "{icon}  {temperatureC}°C",
    "format-icons": [
        "",
        "",
        "",
        "",
        ""
    ],
    "tooltip": true
  },

  "cpu": { 
    "interval": 10, 
    "format": " CPU: {usage}%" 
  },

  "memory": {
    "interval": 30,
    "format": "  RAM: {used:0.1f}/{total:0.1f}GiB ({percentage}%)  "
  },

  "hyprland/window": {
    "format": "{title}"
  },

  "gamemode": {
    "format": "{glyph}",
    "format-alt": "{glyph} {count}",
    "glyph": "f",
    "hide-not-running": true,
    "use-icon": true,
    "icon-name": "input-gaming-symbolic",
    "icon-spacing": 4,
    "icon-size": 20,
    "tooltip": true,
    "tooltip-format": "Games running: {count}"
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "\uf06e",
      "deactivated": "\uf070"
    }
  },
 
  "hyprland/language": {
		"format": " {}",
    "format-en": "US",
    "format-ja": "JP",
		"min-length": 5,
		"on-click": "hyprctl switchxkblayout semico-usb-keyboard next",
		"tooltip": false
	},

  "pulseaudio": {
    "format": " {icon} {volume}% ",
    "format-icons": {
      "default": ["\uf026", "\uf027", "\uf028"]
    },
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click": "~/bin/toggle-app.sh pavucontrol pavucontrol",
    "format-muted": "\uf00d {volume}%"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  
  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}",
    "format-alt-click": "click-right",
    "interval": 1800,
    "return-type": "json",
    "exec": "~/.config/waybar/modules/weather/weather.py",
    "exec-if": "ping openweathermap.org -c1",
    "signal": 8
  },

  "clock": {
    "interval": 30,
    "format": "  {:%e %b %Y, %H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "on-click": ""
  },

  "custom/power": {
		"format": " ",
		"on-click": "wlogout"
	},
 
}
